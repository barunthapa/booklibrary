<div id="main_container">

<section id="category_list">
  <table cell-spacing = 0 cell-padding = 0>
  <tr>
    <th>Category</th>
    <!-- <th>Number of Books</th> -->
    <th></th>
    <th></th>
    <th></th>
  </tr>

	<% @categories.each do |category| %>
		<tr cell-spacing = "0" cell-padding = "0"> 
			<td class="c_name"><%= category.name %> </td>
      <!-- <td><%= category.no_of_books %></td> -->
			<td> <%= link_to "View", category_path(category.id) %> </td>	
      <td> <%= link_to "Edit", edit_category_path(category.id) %> </td>
      <td> <%= link_to "Delete", category_path(category.id), :method => :delete, :confirm => "This Category will be deleted, are you sure?"%> </td>		
    </tr>
	<% end %> 
</table>
</section>

<section id="add">
  <%= link_to "ADD CATEGORY" , new_category_path %>
</section>
</div>